<androidx.preference.PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:key="static_universal"
        app:title="All words">
        <ListPreference
            app:entries="@array/color_entries"
            app:key="static_universal_color"
            app:title="Text color"
            app:entryValues="@array/color_entries"/>
    <MultiSelectListPreference
        app:title="Text decoration"
        app:key="universal_decoration"
        app:entries="@array/text_decorations"
        app:entryValues="@array/text_decorations"
        />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>